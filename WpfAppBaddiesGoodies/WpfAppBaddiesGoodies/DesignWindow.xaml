<Window x:Class="WpfAppBaddiesGoodies.DesignWindow" x:Name="designWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="DesignWindow" Height="450" Width="800">
    <Canvas x:Name="OppeningCanvas">
        <Button x:Name="startPlayBtn" Height="100" Width="300" Content="Lets play!" FontSize="40" FontWeight="UltraBold" FontStyle="Italic" Canvas.Top="300" Canvas.Left="250" Click="startPlayBtn_Click"/>
        <Label  Height="70" Width="600" Canvas.Left="100" Content="Hello Welcome to The Catches Game" FontSize="35" FontWeight="SemiBold" ></Label>
        <TextBlock Height="220" Width="475"  Canvas.Left="165" Canvas.Top="80" HorizontalAlignment="Center" VerticalAlignment="Center"
                   Text="RULES: 
                   &#x0a; 1. do not get caught by the police.
                   &#x0a; 2. If a police officer touches another police officer one of them dead.
                   &#x0a; 3. collect monney to get more score.
                   &#x0a; 4. move with the arrow key to move the Thief. 
                   &#x0a; 5. Use The Space bar to get different place to steal on screen.  " FontSize="15" FontWeight="SemiBold"/>
    </Canvas>
</Window>
